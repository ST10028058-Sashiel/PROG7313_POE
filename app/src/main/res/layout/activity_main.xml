<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dashboardLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
   >

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Welcome back, [User Email]!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Budget Goals -->
    <TextView
        android:id="@+id/tvBudgetGoals"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Monthly Budget Goals:\nMin: R0.00 | Max: R0.00"
        android:textSize="16sp"
        android:textColor="?attr/colorOnBackground"
        android:background="?attr/colorSurface"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:backgroundTint="?attr/colorSurface"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Add Expense Button -->
    <Button
        android:id="@+id/btnAddExpense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="âž• Add New Expense"
        android:textStyle="bold"
        android:backgroundTint="#27AE60"
        android:textColor="#FFFFFF"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvBudgetGoals"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Set Goals Button -->
    <Button
        android:id="@+id/btnSetGoals"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ðŸŽ¯ Set Budget Goals"
        android:textStyle="bold"
        android:backgroundTint="#2980B9"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnAddExpense"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Filter Expenses Button -->
    <Button
        android:id="@+id/btnFilterExpenses"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ðŸ“… View Expenses by Date"
        android:textStyle="bold"
        android:backgroundTint="#8E44AD"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnSetGoals"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Category Totals Button -->
    <Button
        android:id="@+id/btnCategoryTotals"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ðŸ“Š View Totals by Category"
        android:textStyle="bold"
        android:backgroundTint="#E67E22"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnFilterExpenses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Logout Button -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="?attr/colorPrimary"
        android:background="?attr/selectableItemBackground"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnCategoryTotals"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
