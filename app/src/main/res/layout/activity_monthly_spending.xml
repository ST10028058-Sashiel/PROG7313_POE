<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/monthlyLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="#121212">

    <!-- Monthly Progress Status -->
    <TextView
        android:id="@+id/tvMonthlyStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap Refresh to show monthly progress"
        android:textColor="#BB86FC"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp" />

    <!-- Styled Horizontal Progress Bar -->
    <ProgressBar
        android:id="@+id/progressMonthly"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:max="100"
        android:progress="0"
        android:progressTint="#03DAC5"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="32dp" />

    <!-- Refresh Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ”„ Refresh"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:backgroundTint="#6200EE"
        app:cornerRadius="32dp"
        android:paddingHorizontal="32dp"
        android:layout_marginBottom="16dp" />

    <!-- Back to Dashboard Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBackDashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â¬… Back to Dashboard"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:backgroundTint="#03DAC5"
        app:cornerRadius="32dp"
        android:paddingHorizontal="24dp" />

</LinearLayout>
