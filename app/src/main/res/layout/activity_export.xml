<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="#121212">

    <!-- Header / Purpose -->
    <TextView
        android:id="@+id/tvExportInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Export Your Expenses"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginBottom="32dp" />

    <!-- Export CSV Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnExportCsv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“„ Export as CSV"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:backgroundTint="#1E88E5"
        app:cornerRadius="24dp"
        android:layout_marginBottom="16dp" />

    <!-- Export PDF Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnExportPdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“„ Export as PDF"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:backgroundTint="#43A047"
        app:cornerRadius="24dp"
        android:layout_marginBottom="24dp" />

    <!-- Back to Dashboard Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBackDashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â¬… Back to Dashboard"
        android:textStyle="bold"
        android:textColor="#121212"
        app:backgroundTint="#F5F5F5"
        app:cornerRadius="50dp"
        android:paddingHorizontal="32dp" />

</LinearLayout>
